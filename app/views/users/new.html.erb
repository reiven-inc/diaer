<% content_for :head_info do %>
<% title = '無料会員登録｜DIAER [ディアー]'
   description = 'DIAER[ディアー]の無料会員登録ページです。みんなで結婚式のトレンドやアイディアをシェアしよう！' %>
<title><%= title %></title>
<meta name="description" content="<%= description %>">
<meta property="og:title" content="<%= title %>">
<meta property="og:image" content="<%= "#{CDN_IMAGE_ROOT}/diaer/ogp.png" %>">
<meta property="og:type" content="article">
<meta property="og:url" content="<%= request.url %>">
<meta property="og:description" content="<%= description %>">
<% end %>
<% content_for :semantic_data do %>
<script type="application/ld+json">
{
"@context" : "http://schema.org",
"@graph" :
[
{
  "@type" : "WebSite",
  "name" : "DIAER",
  "alternateName" : "ディアー",
  "url" : "<%= SITE_ROOT %>"
},
{
  "@type": "BreadcrumbList",
  "itemListElement":
  [
    {
      "@type": "ListItem",
      "position": 1,
      "item":
      {
        "@id": "<%= SITE_ROOT %>",
        "name": "DIAERトップ"
      }
    }
  ]
}
]
}
</script>
<% end %>
<main class="main-content">
  <div class="h-breadcrumb">
    <ol class="breadcrumb-list container">
      <li class="breadcrumb-list__item"><a href="/">DIAERトップ</a></li>
      <li class="breadcrumb-list__item">無料会員登録</li>
    </ol>
  </div>
  <div class="container">
    <div class="column-container">
      <h1 class="headline-26n">無料会員登録</h1>
      <div class="invite-form-container invite">
        <div class="invite__column invite__column_left">
          <h2 class="invite__title">DIAERに会員登録すると出来ること</h2>
          <ul class="invite__point point">
            <li class="point__item">お気に入りの記事を『LOVE』できる。</li>
          </ul>
          <p class="invite__attention">会員登録がお済みの方はこちら</p>
          <div class="invite__link-button"><a href="/login">ログイン</a></div>
        </div>
        <div class="invite__column invite__column_right">
          <%= form_for(@user, url: 'confirm') do |f| %>
            <table class="invite__table table">
              <caption class="table__name">無料会員登録</caption>
              <tr>
                <th scope="row" class="table__cell table__cell_header"><%= f.label :user_name, 'ユーザー名' %></th>
                <td class="table__cell table__cell_data">
                  <%= f.text_field :user_name, placeholder: 'ユーザー名を入力（20文字以内）', class: 'table__input' %>
                  <% if msg = @user.errors.messages[:user_name][0] %><p class="table__error">※<%= msg %></p><% end %>
                </td>
              </tr>
              <tr>
                <th scope="row" class="table__cell table__cell_header"><%= f.label :user_mail, 'メールアドレス' %></th>
                <td class="table__cell table__cell_data">
                  <%= f.text_field :user_mail, placeholder: '有効なメールアドレス', class: 'table__input' %>
                  <% if msg = @user.errors.messages[:user_mail][0] %><p class="table__error">※<%= msg %></p><% end %>
                </td>
              </tr>
              <tr>
                <th scope="row" class="table__cell table__cell_header"><%= f.label :user_password, 'パスワード' %></th>
                <td class="table__cell table__cell_data">
                  <%= f.password_field :user_password, placeholder: '半角英数字8文字以上', class: 'table__input' %>
                  <% if msg = @user.errors.messages[:user_password][0] %><p class="table__error">※<%= msg %></p><% end %>
                </td>
              </tr>
              <tr>
                <th scope="row" class="table__cell table__cell_header"><%= f.label :user_password_confirmation, 'パスワード確認' %></th>
                <td class="table__cell table__cell_data">
                  <%= f.password_field :user_password_confirmation, placeholder: 'パスワードをもう一度入力', class: 'table__input' %>
                  <% if msg = @user.errors.messages[:user_password_confirmation][0] %><p class="table__error">※<%= msg %></p><% end %>
                </td>
              </tr>
            </table>
            <p class="invite__agree">DIAERの<a href="/agreement" target="_blank">利用規約</a>に同意の上、登録ボタンを押してください。</p>
            <div class="invite__submit submit"><%= f.submit '登録する', class: 'submit__button' %></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="f-breadcrumb">
      <ol class="breadcrumb-list container">
        <li class="breadcrumb-list__item"><a href="/">DIAERトップ</a></li>
        <li class="breadcrumb-list__item">無料会員登録</li>
      </ol>
    </div>
  </div>
</main>
